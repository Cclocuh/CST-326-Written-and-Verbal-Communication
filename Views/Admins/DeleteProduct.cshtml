@model OnlineGroceryStore.Models.Product

<h2>Delete Product</h2>

<h4>Are you sure you want to delete this product?</h4>

<div>
    <strong>@Model.ProductName</strong>
    <p>@Model.Description</p>
    <p><strong>Category:</strong> @Model.Category</p>
    <p><strong>Price:</strong> $@Model.Price</p>
    <p><strong>Stock Quantity:</strong> @Model.StockQuantity</p>
</div>

<form asp-action="DeleteProduct" method="post">
    <input type="hidden" asp-for="ProductID" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Products" class="btn btn-secondary">Cancel</a>
</form>


