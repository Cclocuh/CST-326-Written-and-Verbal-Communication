@model OnlineGroceryStore.Models.Cart

@{
    ViewData["Title"] = "Add to Cart";
}

<h2>Add to Cart</h2>

<form asp-action="AddToCart" method="post">
    <input type="hidden" asp-for="ProductID" value="@ViewBag.Product.ProductID" />
    <div class="form-group">
        <label>Product: @ViewBag.Product.ProductName</label>
    </div>

    <div class="form-group">
        <label for="quantity">Quantity:</label>
        <!-- Adjust the size of the quantity input field -->
        <input type="number" min="1" class="form-control" id="quantity" name="quantity" value="1" required style="width: 100px;" />
    </div>

    <button type="submit" class="btn btn-primary">Add to Cart</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<!-- Conditionally show the delete button if the product is already in the cart -->
@if (ViewBag.ProductInCart != null && ViewBag.ProductInCart == true)
{
    <form asp-action="DeleteFromCart" method="post" class="mt-3">
        <input type="hidden" asp-for="ProductID" value="@ViewBag.Product.ProductID" />
        <button type="submit" class="btn btn-danger">Delete from Cart</button>
    </form>
}



