@model OnlineGroceryStore.Models.ApplicationUser

<h2>My Account</h2>

<div class="row">
    <div class="col-md-4">
        <h4>Account Details</h4>
        <p>Name: @Model.FirstName @Model.LastName</p>
        <p>Email: @Model.Email</p>
        <p>DOB: @Model.DOB.ToString("MM/dd/yyyy")</p>
        <a class="btn btn-info" asp-action="EditProfile">Edit Profile</a>
    </div>
    <div class="col-md-8">
        <ul class="list-group">
            <li class="list-group-item"><a asp-action="OrderHistory">Order History</a></li>
            <li class="list-group-item"><a asp-action="MyOrders">My Orders</a></li>
            <li class="list-group-item"><a asp-action="Wishlist">Wishlist</a></li>
            <li class="list-group-item"><a asp-action="Payments">Payment Methods</a></li>
            <li class="list-group-item"><a asp-action="RecentlyViewed">Recently Viewed Items</a></li>
        </ul>
    </div>
</div>

