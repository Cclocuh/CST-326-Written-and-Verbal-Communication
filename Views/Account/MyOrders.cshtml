@model IEnumerable<OnlineGroceryStore.Models.Order>

<h2>My Active Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Total</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                <td>$@order.TotalPrice</td> <!-- Updated to use TotalPrice instead of Total -->
                <td>@order.Status</td>
            </tr>
        }
    </tbody>
</table>


